<div class="container marketing">
  <div class="row featurette">
    <div class="col-md-7">
      <h2 class="featurette-heading"><%=@actor.name%></h2>
      <p class="lead"><%=@actor.about%></p>
    </div>
    <div class="col-md-5%>">
      <% if @actor.avatar.file.nil? %>
        <%=image_tag 'profile_cover.jpg', alt: @actor.name, class:"featurette-image img-responsive center-block" %>
      <% else %>
        <%=image_tag @actor.avatar.url, alt: @actor.name, class:"featurette-image img-responsive center-block" %>
      <% end %>
    </div>
  </div>

  <hr class="featurette-divider">
  <h2 class="featurette-heading text-center"><span class="text-muted"> Acted in Movies</span></h2>
      <div class="row">
        <% if @movies && !@movies.empty? %>
          <% @movies.each do |movie| %>
            <div class="col-lg-4">
              <%image_tag movie.poster.url, alt: movie.name, style: 'width: 140px; height: 140px;', class: 'img-circle'%>
              <h2><%=movie.name%></h2>
              <p><%=movie.about%></p>
              <p>
              <%= link_to 'View Details', movie, class: 'btn btn-default'%> 
              </p>
            </div><!-- /.col-lg-4 -->
          <% end %>
        <% else %>
            <div class="jumbotron">
              <p>No Movies found for this actor.</p>
            </div>
        <% end %>
      </div><!-- /.row -->
</div><!-- /.container -->