<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-signin-heading">Resend confirmation instructions</h2>

  <%= f.label :email, class: 'sr-only' %><br />
  <%= f.email_field :email, placeholder: "Email", class: 'form-control', autofocus: true %>
  <%= f.submit "Resend confirmation instructions", class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
<%= render "users/shared/links" %>
