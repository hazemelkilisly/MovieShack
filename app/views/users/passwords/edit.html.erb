<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class:"form-signin" }) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-signin-heading">Change your password</h2>
  <%= f.hidden_field :reset_password_token %>

  <%= f.label :password, "New password", class: 'sr-only' %><br />
  <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: 'form-control', autofocus: true%>
  <%= f.label :password_confirmation, "Confirm new password", class: 'sr-only' %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: 'form-control' %><br />
  <%= f.submit "Change my password", class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
<%= render "users/shared/links" %>

