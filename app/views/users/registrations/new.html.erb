<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signin") do |f| %>
  <%= devise_error_messages! %>
    <h2 class="form-signin-heading">Sign up</h2>

    <%= f.label :name, class: 'sr-only' %><br />
    <%= f.text_field :name, autofocus: true, placeholder: "Name", class: 'form-control' %>
    <%= f.label :about, class: 'sr-only' %><br />
    <%= f.text_area :about, placeholder: "About You..", class: 'form-control' %>
    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.email_field :email, placeholder: "Email", class: 'form-control' %>
    <%= f.label :password, class: 'sr-only' %><br />
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: 'form-control' %>
    <%= f.label :password_confirmation, class: 'sr-only' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: 'form-control' %><br />
    <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
<%= render "users/shared/links" %>